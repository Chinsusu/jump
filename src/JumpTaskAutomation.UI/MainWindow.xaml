<Window x:Class="JumpTaskAutomation.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="JumpTask Automation UI"
        Width="960"
        Height="560"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource SurfaceBrush}">
    <Window.Resources>
        <Color x:Key="SidebarColor">#0F172A</Color>
        <Color x:Key="SidebarButtonColor">#16213C</Color>
        <Color x:Key="AccentColor">#22C55E</Color>
        <Color x:Key="SurfaceColor">#0B1220</Color>
        <Color x:Key="CardColor">#111B2E</Color>
        <Color x:Key="BorderColor">#1F2937</Color>

        <SolidColorBrush x:Key="SidebarBrush" Color="{StaticResource SidebarColor}" />
        <SolidColorBrush x:Key="SidebarButtonBrush" Color="{StaticResource SidebarButtonColor}" />
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
        <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}" />
        <SolidColorBrush x:Key="CardBrush" Color="{StaticResource CardColor}" />
        <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}" />
        <SolidColorBrush x:Key="SidebarTextBrush" Color="#E5E7EB" />
        <SolidColorBrush x:Key="BodyTextBrush" Color="#F9FAFB" />
        <SolidColorBrush x:Key="MutedTextBrush" Color="#9CA3AF" />

        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="44" />
            <Setter Property="Margin" Value="0,6,0,0" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Foreground" Value="{StaticResource SidebarTextBrush}" />
            <Setter Property="Background" Value="{StaticResource SidebarButtonBrush}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="16,0" />
            <Setter Property="Cursor" Value="Hand" />
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionTitle">
            <Setter Property="Foreground" Value="{StaticResource BodyTextBrush}" />
            <Setter Property="FontSize" Value="22" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <Style TargetType="TextBlock" x:Key="SectionSubtitle">
            <Setter Property="Foreground" Value="{StaticResource MutedTextBrush}" />
            <Setter Property="FontSize" Value="13" />
            <Setter Property="Margin" Value="0,0,0,16" />
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,4,0,12" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Background" Value="#142033" />
            <Setter Property="Foreground" Value="{StaticResource BodyTextBrush}" />
            <Setter Property="BorderBrush" Value="{StaticResource BorderBrush}" />
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0"
                Background="{StaticResource SidebarBrush}"
                Padding="20,24">
            <StackPanel>
                <TextBlock Text="JumpTask"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="{StaticResource BodyTextBrush}" />
                <TextBlock Text="Automation Console"
                           Margin="0,2,0,16"
                           Foreground="{StaticResource MutedTextBrush}" />

                <Separator Margin="0,0,0,12"
                           Background="{StaticResource BorderBrush}"
                           Height="1" />

                <Button x:Name="ProfileButton"
                        Content="Profile Management"
                        Style="{StaticResource NavButtonStyle}"
                        Click="ProfileButton_Click" />
                <Button x:Name="ProxyButton"
                        Content="Proxy Management"
                        Style="{StaticResource NavButtonStyle}"
                        Click="ProxyButton_Click" />
            </StackPanel>
        </Border>

        <Border Grid.Column="1"
                Background="{StaticResource SurfaceBrush}"
                Padding="28,24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            VerticalAlignment="Center"
                            Margin="0,0,0,18">
                    <Rectangle Width="8" Height="32" RadiusX="4" RadiusY="4" Fill="{StaticResource AccentBrush}" />
                    <StackPanel Margin="10,0,0,0">
                        <TextBlock x:Name="TitleBlock" Style="{StaticResource SectionTitle}" Text="Profiles" />
                        <TextBlock x:Name="SubtitleBlock" Style="{StaticResource SectionSubtitle}" Text="Quản lý hồ sơ thiết bị và cấu hình tự động." />
                    </StackPanel>
                </StackPanel>

                <Border Grid.Row="1"
                        Background="{StaticResource CardBrush}"
                        BorderBrush="{StaticResource BorderBrush}"
                        BorderThickness="1.2"
                        CornerRadius="10"
                        Padding="18">
                    <Grid>
                        <StackPanel x:Name="ProfilePanel">
                            <TextBlock Text="Profile details" Foreground="{StaticResource BodyTextBrush}" FontWeight="SemiBold" Margin="0,0,0,8" />
                            <TextBlock Text="Tên profile" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProfileNameBox" />

                            <TextBlock Text="Thiết bị/ADB target" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="DeviceTargetBox" />

                            <TextBlock Text="Ghi chú" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProfileNotesBox" Height="72" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>

                        <StackPanel x:Name="ProxyPanel" Visibility="Collapsed">
                            <TextBlock Text="Proxy settings" Foreground="{StaticResource BodyTextBrush}" FontWeight="SemiBold" Margin="0,0,0,8" />
                            <TextBlock Text="Proxy host" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProxyHostBox" />

                            <TextBlock Text="Port" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProxyPortBox" />

                            <TextBlock Text="Auth (tùy chọn)" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProxyAuthBox" />

                            <TextBlock Text="Ghi chú" Foreground="{StaticResource MutedTextBrush}" />
                            <TextBox x:Name="ProxyNotesBox" Height="72" TextWrapping="Wrap" AcceptsReturn="True" />
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
