<Window x:Class="ShadowFox.UI.Views.ProfileEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Profile"
        Height="420"
        Width="620"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel>
            <TextBlock Text="Profile details" FontWeight="Bold" FontSize="16"/>

            <StackPanel Orientation="Horizontal">
                <StackPanel Width="280">
                    <TextBlock Text="Name"/>
                    <TextBox Text="{Binding Profile.Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8"/>
                </StackPanel>
                <StackPanel Width="280" Margin="12,0,0,0">
                    <TextBlock Text="Tags"/>
                    <TextBox Text="{Binding Profile.Tags, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <StackPanel Width="280">
                    <TextBlock Text="Group"/>
                    <TextBox Text="{Binding Profile.Group, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8"/>
                </StackPanel>
                <StackPanel Width="280" Margin="12,0,0,0">
                    <TextBlock Text="Notes"/>
                    <TextBox Text="{Binding Profile.Notes, UpdateSourceTrigger=PropertyChanged}" Margin="0,4,0,8"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,8,0,8">
                <TextBlock Text="User Agent:" FontWeight="SemiBold"/>
                <TextBlock Text="{Binding FingerprintUserAgent}" TextTrimming="CharacterEllipsis" Width="430"/>
            </StackPanel>

            <Button Content="Random Fingerprint" Command="{Binding RandomizeFingerprintCommand}" Width="160" Padding="10,6"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,16,0,0">
            <Button Content="Cancel" Width="100" Padding="10,6" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="120" Padding="10,6" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
