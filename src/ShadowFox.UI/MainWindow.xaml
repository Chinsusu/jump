<Window x:Class="ShadowFox.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:ShadowFox.UI.Converters"
        xmlns:models="clr-namespace:ShadowFox.UI.Models"
        mc:Ignorable="d"
        Title="ShadowFox - Antidetect Browser"
        Width="1360"
        Height="860"
        Background="{StaticResource BrushCard}"
        WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <conv:UaConverter x:Key="UaConverter" />

        <!-- Navigation buttons -->
        <Style x:Key="NavPrimaryButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter VerticalAlignment="Center" Margin="6,0,0,0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavSubButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="Margin" Value="12,4,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#C7D2FE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style x:Key="SubAllStyle" TargetType="Button" BasedOn="{StaticResource NavSubButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.AllProfiles}">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SubGroupsStyle" TargetType="Button" BasedOn="{StaticResource NavSubButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.Groups}">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="SubUnassignedStyle" TargetType="Button" BasedOn="{StaticResource NavSubButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.Unassigned}">
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontWeight" Value="SemiBold"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0"
                Background="{StaticResource BrushSurface}"
                Padding="20"
                CornerRadius="0,12,12,0">
            <StackPanel>
                <TextBlock Text="ShadowFox" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                <TextBlock Text="Antidetect Browser" FontSize="12" Foreground="#C7D2FE" Margin="0,0,0,16"/>
                <Separator Margin="0,0,0,12" Background="#2E3A5D" Height="1"/>

                <Button Command="{Binding SelectProfileTabCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavPrimaryButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}">
                                    <Setter Property="Background" Value="#2E3A5D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="{StaticResource FluentIconFont}" Text="&#xE77B;" Margin="0,0,10,0" FontSize="16"/>
                        <TextBlock Text="Profile Management"/>
                    </StackPanel>
                </Button>
                <StackPanel>
                    <Button Content="All Profiles"
                            Style="{StaticResource SubAllStyle}"
                            Command="{Binding SelectAllProfilesSubTabCommand}" />
                    <Button Content="Groups"
                            Style="{StaticResource SubGroupsStyle}"
                            Command="{Binding SelectGroupsSubTabCommand}" />
                    <Button Content="Unassigned"
                            Style="{StaticResource SubUnassignedStyle}"
                            Command="{Binding SelectUnassignedSubTabCommand}" />
                </StackPanel>

                <Button Command="{Binding SelectProxyTabCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavPrimaryButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProxyManagement}">
                                    <Setter Property="Background" Value="#2E3A5D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="{StaticResource FluentIconFont}" Text="&#xE774;" Margin="0,0,10,0" FontSize="16"/>
                        <TextBlock Text="Proxy Management"/>
                    </StackPanel>
                </Button>

                <Button Command="{Binding SelectShopTabCommand}">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource NavPrimaryButton}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ShopProxy}">
                                    <Setter Property="Background" Value="#2E3A5D"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock FontFamily="{StaticResource FluentIconFont}" Text="&#xE7BF;" Margin="0,0,10,0" FontSize="16"/>
                        <TextBlock Text="Proxy Shop"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>

        <!-- Main content -->
        <Grid Grid.Column="1" Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="{StaticResource AccentGradient}" Padding="12" CornerRadius="12">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Profile Management" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                    <TextBlock Text="{Binding SelectedTab, StringFormat='  |  {0}'}" FontSize="12" Foreground="#E5E7EB" Margin="8,4,0,0"/>
                    <TextBlock Text="{Binding SelectedProfileSubTab, StringFormat='  ·  {0}'}" FontSize="12" Foreground="#E5E7EB" Margin="8,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Content card -->
            <Border Grid.Row="1" Background="{StaticResource BrushCard}" Margin="0,12,0,0" Padding="16" CornerRadius="12" BorderBrush="#E5E7EB" BorderThickness="1">
                <Grid>
                    <!-- All Profiles -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}"/>
                                            <Condition Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.AllProfiles}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="New Profile" Command="{Binding CreateProfileCommand}" Padding="12,6" Background="{StaticResource AccentGradient}" Foreground="White" BorderThickness="0" Margin="0,0,8,0"/>
                            <Button Content="Edit" Command="{Binding EditProfileCommand}" Padding="12,6" BorderBrush="#E5E7EB" BorderThickness="1" Background="White" Margin="0,0,8,0"/>
                            <Button Content="Delete" Command="{Binding DeleteProfileCommand}" Padding="12,6" Background="#FEE2E2" BorderBrush="#FCA5A5" BorderThickness="1" Foreground="#991B1B" Margin="0,0,8,0"/>
                            <Button Content="Refresh" Command="{Binding LoadProfilesCommand}" Padding="12,6" BorderBrush="#E5E7EB" BorderThickness="1" Background="White"/>
                        </StackPanel>

                        <DataGrid ItemsSource="{Binding Profiles}"
                                  SelectedItem="{Binding SelectedProfile}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  IsReadOnly="True"
                                  RowHeaderWidth="0"
                                  HeadersVisibility="Column">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                                <DataGridTextColumn Header="Tags" Binding="{Binding Tags}" Width="180" />
                                <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="120" />
                                <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="160" />
                                <DataGridTextColumn Header="User Agent" Binding="{Binding FingerprintJson, Converter={StaticResource UaConverter}}" Width="*" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Groups -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}"/>
                                            <Condition Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.Groups}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <Button Content="Delete selected" Command="{Binding DeleteSelectedGroupsCommand}" Padding="12,6" Background="#FEE2E2" BorderBrush="#FCA5A5" BorderThickness="1" Foreground="#991B1B" Margin="0,0,8,0"/>
                            <Button Content="New group" Command="{Binding AddGroupCommand}" Padding="12,6" Background="{StaticResource AccentGradient}" Foreground="White" BorderThickness="0" Margin="0,0,8,0"/>
                            <TextBox Width="220"
                                     Margin="12,0,0,0"
                                     HorizontalAlignment="Left"
                                     VerticalAlignment="Center"
                                     Text="{Binding SearchGroupText, UpdateSourceTrigger=PropertyChanged}"
                                     Foreground="{StaticResource BrushTextPrimary}"
                                     BorderBrush="#E5E7EB"
                                     Height="34"/>
                        </StackPanel>

                        <DataGrid ItemsSource="{Binding GroupsView}"
                                  AutoGenerateColumns="False"
                                  CanUserAddRows="False"
                                  HeadersVisibility="Column"
                                  RowHeaderWidth="0"
                                  IsReadOnly="False">
                            <DataGrid.Columns>
                                <DataGridCheckBoxColumn Header="Select" Binding="{Binding IsSelected, Mode=TwoWay}" Width="70"/>
                                <DataGridTextColumn Header="Group name" Binding="{Binding Name}" Width="*" />
                                <DataGridTextColumn Header="Number of profiles" Binding="{Binding ProfilesCount}" Width="150" />
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>

                    <!-- Unassigned -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <MultiDataTrigger>
                                        <MultiDataTrigger.Conditions>
                                            <Condition Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}"/>
                                            <Condition Binding="{Binding SelectedProfileSubTab}" Value="{x:Static models:ProfileSubTab.Unassigned}"/>
                                        </MultiDataTrigger.Conditions>
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </MultiDataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Unassigned profiles will appear here." Foreground="{StaticResource BrushTextSecondary}" />
                    </StackPanel>

                    <!-- Proxy -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProxyManagement}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Proxy Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBlock Text="Quản lý proxy, gán per profile, kiểm tra tình trạng. (Placeholder UI)"
                                   Foreground="{StaticResource BrushTextSecondary}" Margin="0,0,0,12"/>
                        <Border Background="#F3F4F6" Padding="16" CornerRadius="8" BorderBrush="#E5E7EB" BorderThickness="1">
                            <TextBlock Text="TODO: bảng proxy, checker, bind proxy cho profile." Foreground="{StaticResource BrushTextPrimary}"/>
                        </Border>
                    </StackPanel>

                    <!-- Shop -->
                    <StackPanel>
                        <StackPanel.Style>
                            <Style TargetType="StackPanel">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ShopProxy}">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </StackPanel.Style>
                        <TextBlock Text="Proxy Shop" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6"/>
                        <TextBlock Text="Mua thêm proxy, xem gói, tích hợp provider. (Placeholder UI)"
                                   Foreground="{StaticResource BrushTextSecondary}" Margin="0,0,0,12"/>
                        <Border Background="#EEF2FF" Padding="16" CornerRadius="8" BorderBrush="#C7D2FE" BorderThickness="1">
                            <StackPanel>
                                <TextBlock Text="Gợi ý: thêm list gói proxy, filter theo quốc gia, nút Buy/Checkout." Foreground="{StaticResource BrushTextPrimary}"/>
                                <TextBlock Text="Hiển thị số proxy còn lại, lịch sử mua, invoice." Foreground="{StaticResource BrushTextSecondary}" Margin="0,6,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
