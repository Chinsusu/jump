<Window x:Class="ShadowFox.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:conv="clr-namespace:ShadowFox.UI.Converters"
        Title="ShadowFox - Base Theme"
        Width="960"
        Height="600"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResizeWithGrip">
    <Window.Resources>
        <conv:NavSelectedConverter x:Key="NavSelectedConverter"/>

        <Style x:Key="TitleButtonStyle" TargetType="Button">
            <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Margin" Value="4,0,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="NavItemButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Pill" Background="{TemplateBinding Background}" CornerRadius="10" Padding="12,8">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#1E293B"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
                <DataTrigger Value="True">
                    <DataTrigger.Binding>
                        <MultiBinding Converter="{StaticResource NavSelectedConverter}">
                            <Binding Path="SelectedNav" RelativeSource="{RelativeSource AncestorType=Window}"/>
                            <Binding Path="Tag" RelativeSource="{RelativeSource Self}"/>
                        </MultiBinding>
                    </DataTrigger.Binding>
                    <Setter Property="Background" Value="#1F2A44"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Border Background="White" CornerRadius="8" BorderBrush="#1B2435" BorderThickness="1">
            <Grid>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#1B1E36" Offset="0"/>
                        <GradientStop Color="#0F172A" Offset="1"/>
                    </LinearGradientBrush>
                </Grid.Background>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <!-- Title bar -->
                    <Grid Grid.Row="0" Background="#0F172A" Opacity="0.9">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Rectangle Fill="#00000000"
                                   MouseDown="DragArea_MouseDown"/>

                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,8,0">
                            <Button Style="{StaticResource TitleButtonStyle}" Click="Minimize_Click" Content="&#xE949;" />
                            <Button Style="{StaticResource TitleButtonStyle}" Click="Maximize_Click" Content="&#xE739;" />
                            <Button Style="{StaticResource TitleButtonStyle}" Click="Close_Click" Content="&#xE106;" Foreground="#EF4444" />
                        </StackPanel>
                    </Grid>

                    <!-- Content -->
                    <Grid Grid.Row="1" Margin="16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="220"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Sidebar navigation -->
                        <Border Grid.Column="0" Background="#0F172A" Opacity="0.9" Padding="16" CornerRadius="12">
                            <StackPanel>
                                <TextBlock Text="Navigation" FontSize="14" FontWeight="SemiBold" Foreground="#E5E7EB" Margin="0,0,0,8"/>
                                <Button Tag="Profile" Style="{StaticResource NavItemButton}" Click="Nav_Click">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE77B;" Margin="0,0,10,0" FontSize="16"/>
                                        <TextBlock Text="Profile"/>
                                    </StackPanel>
                                </Button>
                                <Button Tag="Group" Style="{StaticResource NavItemButton}" Click="Nav_Click">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE902;" Margin="0,0,10,0" FontSize="16"/>
                                        <TextBlock Text="Group"/>
                                    </StackPanel>
                                </Button>
                                <Button Tag="Proxy" Style="{StaticResource NavItemButton}" Click="Nav_Click">
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE774;" Margin="0,0,10,0" FontSize="16"/>
                                        <TextBlock Text="Proxy"/>
                                    </StackPanel>
                                </Button>
                            </StackPanel>
                        </Border>

                        <!-- Content area -->
                        <Border Grid.Column="1" Background="#101728" CornerRadius="12" BorderBrush="#1F2937" BorderThickness="1" Padding="24">
                            <TextBlock Text="{Binding SelectedNav, RelativeSource={RelativeSource AncestorType=Window}, StringFormat='Selected: {0}'}"
                                       Foreground="#E5E7EB" FontSize="16"/>
                        </Border>
                    </Grid>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
