<Window x:Class="ShadowFox.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:conv="clr-namespace:ShadowFox.UI.Converters"
        xmlns:models="clr-namespace:ShadowFox.UI.Models"
        mc:Ignorable="d"
        Title="ShadowFox - Antidetect Browser"
        Height="800"
        Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#F5F6FA">
    <Window.Resources>
        <conv:UaConverter x:Key="UaConverter" />

        <Style x:Key="NavButton" TargetType="Button">
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="16,12"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}">
                    <Setter Property="Background" Value="#2E3A5D"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="NavButtonProxy" BasedOn="{StaticResource NavButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProxyManagement}">
                    <Setter Property="Background" Value="#2E3A5D"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="Button" x:Key="NavButtonShop" BasedOn="{StaticResource NavButton}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ShopProxy}">
                    <Setter Property="Background" Value="#2E3A5D"/>
                    <Setter Property="Foreground" Value="White"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Sidebar -->
        <Border Grid.Column="0" Background="#1C2340" Padding="20">
            <StackPanel>
                <TextBlock Text="ShadowFox" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,4"/>
                <TextBlock Text="Antidetect Browser" FontSize="12" Foreground="#C7D2FE" Margin="0,0,0,16"/>
                <Separator Margin="0,0,0,12" Background="#2E3A5D" Height="1"/>

                <Button Content="Profile Management"
                        Style="{StaticResource NavButton}"
                        Command="{Binding SelectProfileTabCommand}" />
                <Button Content="Proxy Management"
                        Style="{StaticResource NavButtonProxy}"
                        Command="{Binding SelectProxyTabCommand}" />
                <Button Content="Proxy Shop"
                        Style="{StaticResource NavButtonShop}"
                        Command="{Binding SelectShopTabCommand}" />
            </StackPanel>
        </Border>

        <!-- Content -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Background="White" Padding="14" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Profile Management" FontSize="18" FontWeight="SemiBold" Foreground="#111827"/>
                    <TextBlock Text="{Binding SelectedTab, StringFormat='  |  {0}'}" FontSize="12" Foreground="#6B7280" Margin="8,3,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Background="White" Margin="0,6,0,0" Padding="16">
                <Grid>
                <!-- Profile tab -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProfileManagement}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Button Content="New Profile" Command="{Binding CreateProfileCommand}" Padding="12,6" Margin="0,0,8,0"/>
                        <Button Content="Edit" Command="{Binding EditProfileCommand}" Padding="12,6" Margin="0,0,8,0"/>
                        <Button Content="Delete" Command="{Binding DeleteProfileCommand}" Padding="12,6" Margin="0,0,8,0"/>
                        <Button Content="Refresh" Command="{Binding LoadProfilesCommand}" Padding="12,6"/>
                    </StackPanel>

                    <DataGrid ItemsSource="{Binding Profiles}"
                              SelectedItem="{Binding SelectedProfile}"
                              AutoGenerateColumns="False"
                              CanUserAddRows="False"
                              IsReadOnly="True"
                              RowHeaderWidth="0"
                              HeadersVisibility="Column">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="200" />
                            <DataGridTextColumn Header="Tags" Binding="{Binding Tags}" Width="180" />
                            <DataGridTextColumn Header="Group" Binding="{Binding Group}" Width="120" />
                            <DataGridTextColumn Header="Created" Binding="{Binding CreatedAt, StringFormat=\{0:yyyy-MM-dd HH:mm\}}" Width="160" />
                            <DataGridTextColumn Header="User Agent" Binding="{Binding FingerprintJson, Converter={StaticResource UaConverter}}" Width="*" />
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!-- Proxy tab -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ProxyManagement}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Proxy Management" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <TextBlock Text="Quản lý proxy, gán per profile, kiểm tra tình trạng. (Placeholder UI)"
                               Foreground="#6B7280" Margin="0,0,0,12"/>
                    <Border Background="#F3F4F6" Padding="16" CornerRadius="6" BorderBrush="#E5E7EB" BorderThickness="1">
                        <TextBlock Text="TODO: bảng proxy, checker, bind proxy cho profile." Foreground="#4B5563"/>
                    </Border>
                </StackPanel>

                <!-- Shop tab -->
                <StackPanel>
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedTab}" Value="{x:Static models:NavigationTab.ShopProxy}">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="Proxy Shop" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,6"/>
                    <TextBlock Text="Mua thêm proxy, xem gói, tích hợp provider. (Placeholder UI)"
                               Foreground="#6B7280" Margin="0,0,0,12"/>
                    <Border Background="#EEF2FF" Padding="16" CornerRadius="6" BorderBrush="#C7D2FE" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Gợi ý: thêm list gói proxy, filter theo quốc gia, nút Buy/Checkout." Foreground="#374151"/>
                            <TextBlock Text="Hiển thị số proxy còn lại, lịch sử mua, invoice." Foreground="#4B5563" Margin="0,6,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</Window>
